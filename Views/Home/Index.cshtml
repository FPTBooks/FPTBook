@model IEnumerable<FPTBook.Models.Book>
    @* @{
    Layout = "~/Views/Shared/homeLO.cshtml";
} *@
<div class="row">
    @foreach (var books in Model)
    {
        <div class="col-md-6">
            <div class="product">
                <h4>@books.Name</h4>
                <p>@books.Price.ToString("C")</p>
                <img src="~/uploads/@Html.DisplayFor(modelItem => books.Image)" alt="">
                <a type = "button" class="btn btn-primary" asp-controller="Book" asp-action="Details" asp-route-id="@books.Id">Details</a> 
            </div>
        </div>
    }
</div>

<nav aria-label="Page navigation">
    <ul class="pagination">
        @for (int i = 1; i <= ViewBag.TotalPage; i++)
        {
            <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
            </li>
            
        }
    </ul>
</nav>
